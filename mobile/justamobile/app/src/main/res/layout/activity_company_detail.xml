<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CompanyDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_detail_thumb"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[3]">
        </ImageView>

        <TextView
            android:id="@+id/textView_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_detail_thumb"
            android:text="Empresa de Reciclagem"
            android:gravity="center"
            android:padding="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_detail_name"
            android:src="@drawable/ic_menu_share"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView2"
            android:layout_above="@+id/imageView3" />

        <TextView
            android:id="@+id/textView_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aqui sera um endereco muito grande pq vai descer para outra linha"
            android:padding="3dp"
            android:layout_alignLeft="@+id/textView_detail_phone"
            android:layout_alignStart="@+id/textView_detail_phone"
            android:layout_below="@+id/textView_detail_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_detail_address"
            android:src="@drawable/ic_menu_share"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/imageView3" />

        <TextView
            android:id="@+id/textView_detail_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:padding="3dp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignLeft="@+id/textView_detail_description_"
            android:layout_alignStart="@+id/textView_detail_description_" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_detail_phone"
            android:src="@drawable/ic_menu_share"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/imageView4" />

        <TextView
            android:id="@+id/textView_detail_description_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:padding="4dp"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />




    </RelativeLayout>

</ScrollView>